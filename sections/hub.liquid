          "options": [
            {
              "value": "h2",
              "label": "Heading 2"
            },
            {
              "value": "h1",
              "label": "Heading 1"
            },
            {
              "value": "h0",
              "label": "Heading 0"
            },
            {
              "value": "hxl",
              "label": "Heading xl"
            }
          ],
          "default": "h1",
          "label": "Default Heading 1"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hub",
      "blocks": [
        {
          "type": "heading"
        }
      ]
    }
  ]
  }
