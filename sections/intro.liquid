
{% schema %}
  {
    "name": "Intro",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "My Custom Heading"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Intro Image"
      },
      {
        "type": "range",
        "id": "image_overlay_opacity",
        "min": 0,
        "max": 100,
        "step": 10,
        "unit": "%",
        "label": "Opacité",
        "default": 0
      },
      {
        "type": "select",
        "id": "image_height",
        "options": [
          {
            "value": "adapt",
            "label": "Adapter à première image"
          },
          {
            "value": "small",
            "label": "Petit"
          },
          {
            "value": "medium",
            "label": "Moyen"
          },
          {
            "value": "large",
            "label": "Large"
          }
        ],
        "default": "medium",
        "label": "Moyen par défaut",
        "info": "Utiliser image en 3.2."
      }
    ],
    "blocks" : [
      {
        "type": "buttons",
        "name": "buttons",
        "settings": [
          {
            "type": "text",
            "id": "button_label",
            "default": "Button label",
            "label": "Button label",
            "info": "For text in button"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Intro",
        "blocks": [
        {
          "type": "buttons"
        }
      ]
      }
    ]
  }
{% endschema %}

